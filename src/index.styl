 font-dpr(size)
  font-size size px

  [data-dpr="2"] & 
    font-size size * 2 px
      
  [data-dpr="3"] & 
    font-size size * 3 px



px2rem(num) {
  num / 75 rem
}


fixedHeight = 72px;

* {
	box-sizing: border-box;
}


body {
	margin: 0;
	padding: 0;
	-webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family: -apple-system, BlinkMacSystemFont, 'Microsoft Yahei', Tahoma, Simsun, sans-serif, emoji;
    font-dpr(14);
}

.main-container {
    width: 100%;
    height: 100vh;
    background-image: url('./images/1.jpeg');
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

fixedBlock()
    position: fixed;
    width: 100%;
    height: fixedHeight;
    background: #fff;

.header-container {
    fixedBlock();
    display: flex;
    align-items: center;
    padding-left: 80px;
    box-shadow: 0 2px 8px #f0f1f2;
    color: #333;
    font-dpr(18);
    top: 0;
    font-weight: bold;

    img {
        width: 26px;
        margin-right: 6px;
    }
}

.footer-container {
    fixedBlock();
    text-align: center;
    bottom: 0;
    border-top: 1px solid #efefef;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-dpr(14);
    p {
        margin: 0;
        line-height: 1;
    }
}

.body-container {
    padding: @height 0;
    display: flex;
    justify-content: center;
    overflow-y: auto;
    overflow-x: hidden;
    height: 100%;
    align-items: center;
    
    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        h3 {
            font-dpr(38);
            margin: 0;
            padding: 0;
            color: #333;
        }
        p {
            font-dpr(14); 
            color: #444;
        }
        button {
            height: 50px;
            width: 210px;
            background: white;
            border: 1px solid #333;
            border-radius: 2px;
            font-dpr(14); 
            -webkit-appearance: none;
            outline: 0;
            cursor: pointer;
        }
    }

    .custom-modal {
        width: 418px;
        background: white;
        border-radius: 4px;
        position: relative;

        header {
            font-dpr(16);
            padding: 25px;
            text-align: center;
            border-bottom: 1px solid #efefef;
        }
        svg {
            right: 13px;
            font-dpr(16);
            position: absolute;
            top: 13px;
            color: #666;
            cursor: pointer;
        }
        .body {
            padding: 28px 40px 40px;
            input {
                display: block;
                height: 46px;
                width: 100%;
                border-radius: 2px;
                border: 1px solid #e4e4e4;
                margin-bottom: 18px;
                padding-left: 30px;
                -webkit-appearance: none;
                outline: 0;
                font-dpr(14);

                &:focus {
                    border: 1px solid #333;
                }

                &.err {
                    border-color: red;
                }
                &[name='confirmEmail'] {
                    margin-bottom: 0;
                }
            }
            .tip {
                color: red;
                margin: 0;
                padding: 0;
                height: 56px;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            button {
                display: block;
                width: 100%;
                height: 46px;
                outline: 0;
                background: #222;
                border: 0;
                color: white;
                font-dpr(14);
                border: 1px solid;
                cursor: pointer;
                &:disabled {
                    border: 0;
                    color: white;
                    background: #efefef;
                    cursor: not-allowed;
                }
            }
        }
        .info {
            p {
                margin: 0;
                padding: 0;
                font-dpr(14);
                color: #333;
                text-align: center;
                line-height: 1.3;
                width: 80%;
                margin: 0 auto;
            }
            button {
                width: 80%;
                margin: 30px auto 0;
            }
        }
    }
}

h5Height = px2rem(124);

.h5 {
    background-position: px2rem(-1033) px2rem(-25);
    background-size: cover;

    .header-container, .footer-container {
        height: h5Height;
        
    }
    .header-container {
        padding-left: px2rem(60);
        img {
            width: px2rem(40);
            margin-right: px2rem(8);
        }
    }

    .body-container {
        padding: h5Height 0;
        .content button {
            height: px2rem(86);
            width: px2rem(320);
        }
        .custom-modal {
            width: 84%;
            header {
                padding: px2rem(44);
            }
            svg {
                top: px2rem(26);
                right: px2rem(26);
            }
            .body {
                padding: px2rem(35) px2rem(56) px2rem(60);
                input, button {
                    height: px2rem(88);
                }
                input {
                    margin-bottom: px2rem(24);
                    &[name='confirmEmail'] {
                        margin-bottom: 0;
                    }
                }
                .tip {
                    height: px2rem(112);
                }
            }
            .info  button{
                margin-top: px2rem(40);
            }
        }
    }
}